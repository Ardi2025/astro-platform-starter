---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Brand Mission â€“ Ardi">
  <section style="
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    padding: 80px 20px; 
    max-width: 1000px;
    margin: 0 auto;
  ">
    <!-- Left column: logo -->
    <div style="
      flex: 1 1 300px;
      text-align: center;
      margin-bottom: 40px;
    ">
      <img
        src="/logo.png"
        alt="Ardi logo"
        style="
          max-width: 200px;
          width: 100%;
          height: auto;
        "
      />
    </div>

    <!-- Right column: mission text -->
    <div style="
      flex: 2 1 400px;
      padding-left: 40px;
      box-sizing: border-box;
    ">
      <h2 style="
        font-size: 2rem;
        margin-bottom: 20px;
        color: #1A1A1A;
        font-weight: 700;
      ">
        Empowering Local Designers
      </h2>
      <p style="
        font-size: 1.125rem;
        line-height: 1.6;
        color: #333333;
      ">
        Empower local designers with the essential tools to achieve global excellence through the seamless integration of technology, genuine human connections, and unwavering authenticity.
      </p>
    </div>
  </section>
</Layout>
